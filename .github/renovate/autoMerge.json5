{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "Auto merge container digests",
      "matchDatasources": ["docker"],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true,
      "matchUpdateTypes": ["digest"],
      "matchPackagePattern": [
        "ghcr.io/szinn",
        "ghcr.io/onedr0p",
        "ghcr.io/bjw-s"
      ]
    },
    {
      "description": "Auto merge KPS minors and patches",
      "matchDatasources": ["helm"],
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": ["kube-prometheus-stack"],
      "ignoreTests": false
    },
    {
      "matchDatasources": [
        "docker",
        "github-actions",
        "github-releases",
        "github-tags",
        "helm"
      ],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null,
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "ghcr.io/szinn/sonarr",

        "ghcr.io/onedr0p/jackett",
        "ghcr.io/onedr0p/lidarr",
        "ghcr.io/onedr0p/prowlarr-nightly",
        "ghcr.io/onedr0p/qbittorrent",
        "ghcr.io/onedr0p/radarr",
        "ghcr.io/onedr0p/recyclarr",
        "ghcr.io/onedr0p/sabnzbd",
        "ghcr.io/onedr0p/sonarr",
        "ghcr.io/onedr0p/sonarr-develop",

        "renovatebot/github-action"
      ]
    }
  ]
}
