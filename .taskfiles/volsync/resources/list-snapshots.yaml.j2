---
apiVersion: batch/v1
kind: Job
metadata:
  name: list-snapshots-{{ ENV.APP }}
  namespace: {{ ENV.NS }}
spec:
  ttlSecondsAfterFinished: 3600
  template:
    metadata:
      labels:
        app.kubernetes.io/created-by: volsync
    spec:
      automountServiceAccountToken: false
      restartPolicy: OnFailure
      containers:
        - name: list
          image: docker.io/restic/restic:0.17.3
          args:
            - snapshots
          envFrom:
            - secretRef:
                name: {{ ENV.APP }}-volsync-secret
          volumeMounts:
            - mountPath: /repository
              name: repository
      volumes:
        - name: repository
          nfs:
            server: "ragnar.zinn.tech"
            path: "/mnt/atlas/k8s/{{ ENV.CLUSTER }}/volsync"
