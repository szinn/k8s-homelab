---
version: v1alpha1
machine:
  ca:
    crt: op://Kubernetes/cluster-staging/MACHINE_CA_CRT
    {% if ENV.IS_CONTROLPLANE %}
    key: op://Kubernetes/cluster-staging/MACHINE_CA_KEY
    {% endif %}
  certSANs:
    - staging.zinn.tech
  features:
    apidCheckExtKeyUsage: true
    diskQuotaSupport: true
    hostDNS:
      enabled: true
      forwardKubeDNSToHost: false
      resolveMemberNames: true
    kubePrism:
      enabled: true
      port: 7445
    {% if ENV.IS_CONTROLPLANE %}
    kubernetesTalosAPIAccess:
      allowedKubernetesNamespaces:
        - system-upgrade
      allowedRoles:
        - os:admin
      enabled: true
    {% endif %}
    rbac: true
    stableHostname: true
  files:
    - op: create
      path: /etc/cri/conf.d/20-customization.part
      content: |
        [plugins."io.containerd.cri.v1.images"]
          discard_unpacked_layers = false
        [plugins."io.containerd.cri.v1.runtime"]
          cdi_spec_dirs = ["/var/cdi/static", "/var/cdi/dynamic"]
          device_ownership_from_security_context = true
    - op: overwrite
      path: /etc/nfsmount.conf
      permissions: 0o644
      content: |
        [ NFSMount_Global_Options ]
        nfsvers=4.2
        hard=True
        nconnect=16
        noatime=True
  install:
    disk: /dev/sda
    image: factory.talos.dev/metal-installer/0f592b26391082c8a8227f6d322f7a66bb4fefaab339e248d987436084347c7c:v1.11.5
    wipe: false
  kubelet:
    defaultRuntimeSeccompProfileEnabled: true
    disableManifestsDirectory: true
    extraArgs:
      image-gc-high-threshold: "70"
      image-gc-low-threshold: "65"
    extraConfig:
      featureGates:
        ImageVolume: true
        ResourceHealthStatus: true
      serializeImagePulls: false
    image: ghcr.io/siderolabs/kubelet:v1.34.2
    nodeIP:
      validSubnets:
        - 10.12.0.0/16
  network:
    disableSearchDomain: true
  nodeLabels:
    node.kubernetes.io/gpu: "true"
    topology.kubernetes.io/region: staging
  sysctls:
    fs.inotify.max_user_instances: "8192"
    fs.inotify.max_user_watches: "1048576"
    net.core.default_qdisc: fq
    net.core.rmem_max: "67108864"
    net.core.wmem_max: "67108864"
    net.ipv4.neigh.default.gc_thresh1: "4096"
    net.ipv4.neigh.default.gc_thresh2: "8192"
    net.ipv4.neigh.default.gc_thresh3: "16384"
    net.ipv4.tcp_congestion_control: bbr
    net.ipv4.tcp_fastopen: "3"
    net.ipv4.tcp_mtu_probing: "1"
    net.ipv4.tcp_rmem: 4096 87380 33554432
    net.ipv4.tcp_window_scaling: "1"
    net.ipv4.tcp_wmem: 4096 65536 33554432
    sunrpc.tcp_max_slot_table_entries: "128"
    sunrpc.tcp_slot_table_entries: "128"
    user.max_user_namespaces: "11255"
    vm.nr_hugepages: "1024"
  time:
    disabled: false
    servers:
      - 10.10.0.2
  token: op://Kubernetes/cluster-staging/MACHINE_TOKEN
cluster:
  ca:
    crt: op://Kubernetes/cluster-staging/CLUSTER_CA_CRT
    {% if ENV.IS_CONTROLPLANE %}
    key: op://Kubernetes/cluster-staging/CLUSTER_CA_KEY
    {% endif %}
  clusterName: staging
  controlPlane:
    endpoint: https://staging.zinn.tech:6443
  discovery:
    enabled: true
    registries:
      kubernetes:
        disabled: true
      service:
        disabled: false
  id: op://Kubernetes/cluster-staging/CLUSTER_ID
  network:
    cni:
      name: none
    dnsDomain: cluster.local
    podSubnets:
      - 10.211.0.0/16
    serviceSubnets:
      - 10.210.0.0/16
  secret: op://Kubernetes/cluster-staging/CLUSTER_SECRET
  token: op://Kubernetes/cluster-staging/CLUSTER_TOKEN
  {% if ENV.IS_CONTROLPLANE %}
  aggregatorCA:
    crt: op://Kubernetes/cluster-staging/CLUSTER_AGGREGATORCA_CRT
    key: op://Kubernetes/cluster-staging/CLUSTER_AGGREGATORCA_KEY
  allowSchedulingOnControlPlanes: true
  apiServer:
    auditPolicy:
      apiVersion: audit.k8s.io/v1
      kind: Policy
      rules:
        - level: Metadata
    certSANs:
      - staging.zinn.tech
    disablePodSecurityPolicy: true
    extraArgs:
      enable-aggregator-routing: "true"
      feature-gates: ImageVolume=true,MutatingAdmissionPolicy=true
      runtime-config: admissionregistration.k8s.io/v1beta1=true
    image: registry.k8s.io/kube-apiserver:v1.34.3
  controllerManager:
    extraArgs:
      bind-address: 0.0.0.0
    image: registry.k8s.io/kube-controller-manager:v1.34.3
  coreDNS:
    disabled: true
  etcd:
    advertisedSubnets:
      - 10.12.0.0/16
    ca:
      crt: op://Kubernetes/cluster-staging/CLUSTER_ETCD_CA_CRT
      key: op://Kubernetes/cluster-staging/CLUSTER_ETCD_CA_KEY
    extraArgs:
      listen-metrics-urls: http://0.0.0.0:2381
  proxy:
    disabled: true
    image: registry.k8s.io/kube-proxy:v1.34.3
  scheduler:
    config:
      apiVersion: kubescheduler.config.k8s.io/v1
      kind: KubeSchedulerConfiguration
      profiles:
        - schedulerName: default-scheduler
          plugins:
            score:
              disabled:
                - name: ImageLocality
          pluginConfig:
            - name: PodTopologySpread
              args:
                defaultingType: List
                defaultConstraints:
                  - maxSkew: 1
                    topologyKey: kubernetes.io/hostname
                    whenUnsatisfiable: ScheduleAnyway
    extraArgs:
      bind-address: 0.0.0.0
    image: registry.k8s.io/kube-scheduler:v1.34.3
  secretboxEncryptionSecret: op://Kubernetes/cluster-staging/CLUSTER_SECRETBOXENCRYPTIONSECRET
  serviceAccount:
    key: op://Kubernetes/cluster-staging/CLUSTER_SERVICEACCOUNT_KEY
  {% endif %}
